
<section class="hero-wrap hero-wrap-2" style="background-image: url('images/bg_3.jpg');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text align-items-end justify-content-center">
            <div class="col-md-9 ftco-animate text-center mb-4">
                <h1 class="mb-2 bread">Cart Item</h1>
                <p class="breadcrumbs"><span class="mr-2"><a asp-action="Index" asp-controller="Home">Home <i class="ion-ios-arrow-forward"></i></a></span> <span>Cart Item<i class="ion-ios-arrow-forward"></i></span></p>
            </div>
        </div>
    </div>
</section>

<!-- Cart Page Section -->
<section class="ftco-section ftco-no-pt ftco-no-pb cart-section">
    <div class="container">
        <div class="row d-flex align-items-stretch no-gutters">
            <!-- Cart Items -->
            <div class="col-md-6 pt-5 px-2 pb-2 p-md-5 order-md-last">
                <h2 class="h4 mb-2 mb-md-5 font-weight-bold">Your Cart</h2>
                <!-- Cart Item 1 -->
                <div class="cart-item mb-4">
                    <p class="font-weight-bold">Product Name</p>
                    <p>Description of the product.</p>
                    <div class="d-flex justify-content-between">
                        <span>Price: $20.00</span>
                        <input type="number" class="form-control w-25" value="1" min="1" max="10">
                    </div>
                    <button class="btn btn-danger mt-3">Remove</button>
                    <hr>
                </div>

                <!-- Additional Cart Items (Copy for more items) -->
                <!-- Proceed to Checkout -->
                <div class="form-group">
                    <button class="btn btn-primary py-3 px-5">Proceed to Order</button>
                </div>
            </div>
            <!-- Map or Promotion Section (Optional) -->
            <div class="col-md-6 d-flex align-items-stretch">
                <div id="map">
                    <!-- You can use this section for promotion or checkout details -->
                    <p class="text-center py-5">Cart Summary or Promotional Information</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Order Summary Section -->
<section class="ftco-section cart-summary-section">
    <div class="container">
        <div class="row d-flex cart-info">
            <div class="col-md-12 mb-4">
                <h2 class="h4 font-weight-bold">Order Summary</h2>
            </div>
            <div class="w-100"></div>
            <div class="col-md-3 d-flex">
                <div class="dbox">
                    <p><span>Subtotal:</span> $20.00</p>
                </div>
            </div>
            <div class="col-md-3 d-flex">
                <div class="dbox">
                    <p><span>Tax:</span> $2.00</p>
                </div>
            </div>
            <div class="col-md-3 d-flex">
                <div class="dbox">
                    <p><span>Total:</span> $22.00</p>
                </div>
            </div>
        </div>
    </div>
</section>

